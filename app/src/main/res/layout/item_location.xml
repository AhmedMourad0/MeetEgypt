<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:focusable="true"
    android:clickable="true"
    android:layout_marginEnd="@dimen/locationCardMarginSide"
    android:layout_marginStart="@dimen/locationCardMarginSide"
    android:layout_marginTop="@dimen/locationCardMarginTop"
    app:cardCornerRadius="@dimen/locationCardCornerRadius"
    app:cardElevation="@dimen/locationCardElevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:paddingBottom="@dimen/locationNamePaddingBottom"
            android:paddingTop="@dimen/locationNamePaddingTop"
            android:paddingStart="@dimen/locationNamePaddingSide"
            android:paddingEnd="@dimen/locationNamePaddingSide"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/locationNameTextSize"
            android:textStyle="bold"
            tools:text="Location name" />

        <ImageView
            android:id="@+id/location_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/location_image"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/location_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="3"
            android:padding="@dimen/locationSummaryPadding"
            android:scrollHorizontally="true"
            tools:text="Chivito is a national dish of Uruguay, It is a thin slice of tender cooked beef steak (churrasco), with mozzarella, tomatoes, mayonnaise, black or green olives, and commonly also bacon, fried or hard-boiled eggs and ham, served as a sandwich in a bun, often accompanied by French fried potatoes. Other ingredients, such as red beets, peas, grilled or pan-fried red peppers, and slices of cucumber, may be added." />

    </LinearLayout>

</android.support.v7.widget.CardView>
